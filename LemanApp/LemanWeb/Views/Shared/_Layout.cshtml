<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dropzonescss")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span><a data-target="!#menu-toggle" class="navbar-brand" id="menu-toggle"><i class="fa fa-list"></i></a></span>

            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="wrapper">
            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <a href="#">
                            Batik Papua
                        </a>
                    </li>
                    <li>
                        <a href="#!kategori">Kategori</a>

                    </li>
                    <li>
                        <a href="#!jenisbarang">Jenis Barang</a>
                    </li>
                    <li>
                        <a href="#!kain">Kain</a>
                    </li>
                    <li>
                        <a href="#!produk">Produk Jadi</a>
                    </li>
                    <li>
                        <a href="#!pembelian">Pembelian</a>
                    </li>
                    <li>
                        <a href="#!laporanpenjualan">Laporan Penjualan</a>
                    </li>
                    <li>
                        <a href="#!laporanstok">Laporan Stok</a>
                    </li>
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper" ng-app="app">
                <div class="container-fluid">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/dropzonescripts")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/App/app.controller.js"></script>
    <script src="~/Scripts/App/app.js"></script>
    <script src="~/Scripts/App/app.service.js"></script>
    @RenderSection("scripts", required: false)
</body>
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>